<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/personalImage"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:src="@drawable/daniel"
        app:shapeAppearanceOverlay="@style/roundImageView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_margin="16dp"
        android:text="@string/mahmoud_deif"
        android:textColor="@color/black"
        android:textSize="@dimen/mid_size_text" />

    <TextView
        android:id="@+id/button_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin2"
        android:layout_marginEnd="@dimen/mid_margin"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="@string/_3_hr"
        android:textColor="@color/buttonTextColor"
        android:textSize="@dimen/small_size_text" />


    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/engineer"
        android:textColor="@color/buttonJobAndCountryColor"
        android:textSize="@dimen/small_size_text" />

    <TextView
        android:id="@+id/my_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_large_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/russian"
        android:textColor="@color/buttonJobAndCountryColor"
        android:textSize="@dimen/small_size_text" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="13dp"
        android:layout_height="16dp"
        android:layout_marginStart="@dimen/very_small_margin2"
        android:layout_marginTop="@dimen/very_large_margin2"
        android:background="@drawable/ic_baseline_location_on_24" />

    <TextView
        android:id="@+id/location_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin_5dp"
        android:layout_marginTop="@dimen/margin_large_89dp"
        android:text="@string/uk"
        android:textColor="@color/buttonJobAndCountryColor" />

    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_90dp"
        android:layout_marginStart="112dp"
        android:baselineAligned="false"
        android:text="@string/_5_days_ago"
        android:textColor="@color/buttonJobAndCountryColor" />

    <TextView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-216dp"
        android:layout_marginTop="@dimen/margin_113dp"
        android:text="@string/_150_reviews"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_113dp"
        android:text="@string/_4_5"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_121dp"
        android:background="@drawable/ic_baseline_star_24" />
</LinearLayout>